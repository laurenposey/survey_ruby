<h1>Add new question:</h1>

<form action="/questions" method="post">

  <label for="survey_id">Select a Survey</label>
  <select id="survey_id" name="survey_id" type='text' required>
    <% @surveys.each() do |survey| %>
      <option value="<%= survey.id()%>"> <%= survey.name() %> </option>
    <% end %>
  </select>

  <label for="description">Question:</label>
  <input id="description" name="description" type="text">

  <button type="submit">Add question</button>
</form>

<div class='container'>
  <button><a href="/surveys/new">Add new survey</a></button>
  <hr>
  <!-- <button><a href="/questions">View all questions</a></button> -->
  <button><a href="/surveys">View all surveys</a></button>
  <hr>
  <button><a href="/">Home</a></button>
</div>
